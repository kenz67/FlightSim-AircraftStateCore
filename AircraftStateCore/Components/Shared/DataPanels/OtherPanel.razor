@using AircraftStateCore.Helpers
@using AircraftStateCore.Models
@using AircraftStateCore.Services.Interfaces

@inject ISettingsData settings;


	<MudExpansionPanels Class="@BackGroundClass">
		<MudExpansionPanel Expanded="true" Text="2.2">
			<TitleContent>
				<MudText Typo="Typo.h6">Other</MudText>
			</TitleContent>
			<ChildContent>
				<MudGrid Spacing="1">
					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.OtherTransponder)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 3fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.OtherTransponder</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.GetTransponder(Data.transponder)</MudButton>
							</div>
						</MudItem>
					}

					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.OtherKolhsman)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 3fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.OtherKolhsman</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.Decimal2Formatter(Data.kohlsman)</MudButton>
							</div>
						</MudItem>
					}

					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.OtherHeadingBug)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 3fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.OtherHeadingBug</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Data.headingBug</MudButton>
							</div>
						</MudItem>
					}

					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.GyroDrift)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 2fr 1fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.GyroDrift</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.GetTransponder(Data.transponder)</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.GyroDriftLabel(Data)</MudButton>
							</div>
						</MudItem>
					}

					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.OtherBatteryVoltage)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 3fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.OtherBatteryVoltage</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.Decimal2Formatter(Data.batteryVoltage)</MudButton>
							</div>
						</MudItem>
					}
				</MudGrid>
			</ChildContent>
		</MudExpansionPanel>
	</MudExpansionPanels>

@code {
	[Parameter]
	public List<AvailableDataItem> SelectedData { get; set; } = new List<AvailableDataItem>();

	[Parameter]
	public string BackGroundClass { get; set; }

	[Parameter]
	public PlaneDataStruct Data { get; set; }

    private bool CheckDisplay => SelectedData.Count > 0;

