@using AircraftStateCore.Helpers
@using AircraftStateCore.Models
@using AircraftStateCore.Services.Interfaces

@inject ISettingsData settings;

	<MudExpansionPanels Class="@BackGroundClass">
		<MudExpansionPanel Expanded="true">
			<TitleContent>
				<MudText Typo="Typo.h6">Plane Configuration</MudText>
			</TitleContent>
			<ChildContent>
				<MudGrid Spacing="1">
					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.ConfigurationFlaps)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 4fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.ConfigurationFlaps</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Data.flapsIndex</MudButton>
							</div>
						</MudItem>
					}

					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.ConfigurationParkingBrake)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 4fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.ConfigurationParkingBrake</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.GetOnOff(Data.parkingBrake)</MudButton>
							</div>
						</MudItem>
					}

					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.ConfigurationElevatorTrim)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 2fr 2fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.ConfigurationElevatorTrim</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.Decimal2AbsFormatter(Data.elevtorTrim)</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-label">@Formatter.ElevatorTrimLabel(Data)</MudButton>
							</div>
						</MudItem>
					}

					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.ConfigurationRudderTrim)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 2fr 2fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.ConfigurationRudderTrim</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.Decimal2AbsFormatter(Data.rudderTrim)</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-label">@Formatter.RudderTrimLabel(Data)</MudButton>
							</div>
						</MudItem>
					}

					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.ConfigurationAileronTrim)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 2fr 2fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.ConfigurationAileronTrim</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.Decimal2AbsFormatter(Data.aileronTrim)</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-label">@Formatter.AileronTrimLabel(Data)</MudButton>
							</div>
						</MudItem>
					}
				</MudGrid>
			</ChildContent>
		</MudExpansionPanel>
	</MudExpansionPanels>

@code {
	[Parameter]
	public List<AvailableDataItem> SelectedData { get; set; } = new List<AvailableDataItem>();

	[Parameter]
	public string BackGroundClass { get; set; }

	[Parameter]
	public PlaneDataStruct Data { get; set; }

    private bool CheckDisplay => SelectedData.Count > 0;

