@using AircraftStateCore.Helpers
@using AircraftStateCore.Models
@using AircraftStateCore.Services.Interfaces

@inject ISettingsData settings;

<MudItem md="6" lg="4" xs="12">
	<MudExpansionPanels Class="@BackGroundClass">
		<MudExpansionPanel Expanded="true" Text="2.2">
			<TitleContent>
				<MudText Typo="Typo.h6">Power</MudText>
			</TitleContent>
			<ChildContent>
				<MudGrid Spacing="1">
					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.PowerMasterBattery)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 3fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.PowerMasterBattery</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Data.masterBattery</MudButton>
							</div>
						</MudItem>
					}

					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.PowerMasterAlternator)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 3fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.PowerMasterBattery</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.GetOnOff(Data.masterAlternator)</MudButton>
							</div>
						</MudItem>
					}

					@if (!CheckDisplay || SelectedData.Exists(s => s.txt.Equals(FieldText.PowerMasterAvionics)))
					{
						<MudItem xs="12">
							<div style="display: grid; grid-template-columns: 3fr 3fr; gap: 0;">
								<MudButton Variant="Variant.Filled" Class="group-label">@FieldText.PowerMasterAvionics</MudButton>
								<MudButton Variant="Variant.Outlined" Class="group-data">@Formatter.GetOnOff(Data.masterAvionics)</MudButton>
							</div>
						</MudItem>
					}
				</MudGrid>
			</ChildContent>
		</MudExpansionPanel>
	</MudExpansionPanels>
</MudItem>

@code {
	[Parameter]
	public List<AvailableDataItem> SelectedData { get; set; } = new List<AvailableDataItem>();

	[Parameter]
	public string BackGroundClass { get; set; }

	[Parameter]
	public PlaneDataStruct Data { get; set; }

    private bool CheckDisplay => SelectedData.Count > 0;

	// protected override void OnInitialized()
