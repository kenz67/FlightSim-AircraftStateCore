<MudDialog>
    <DialogContent>
        <br />
            <div>@Message</div>
        <br />
    </DialogContent>
    <DialogActions>        
        @if (ShowCancel)
        {
            <MudButton Color="Color.Secondary" OnClick="() => MudDialog.Cancel()">@CancelText</MudButton>
        }
        <MudButton Color="Color.Primary" OnClick="Close">@OkText</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance MudDialog { get; set; }

    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public bool ShowCancel { get; set; } = false;

    [Parameter]
    public string OkText { get; set; } = "OK";

    [Parameter]
    public string CancelText { get; set; } = "Cancel";

    protected override void OnInitialized()
    {
        MudDialog.SetOptionsAsync(new DialogOptions() { BackdropClick = false });
    }

    private void Close() => MudDialog.Close(DialogResult.Ok(true));

    }

}